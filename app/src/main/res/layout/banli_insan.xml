<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:minHeight="90dp"
    android:layout_height="80dp"
    android:id="@+id/apobar"
    android:weightSum="1"
    android:background="#e0e0e0">


    <RelativeLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="false"
        android:layout_alignParentRight="false"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:background="@mipmap/neyse_bir_mi"
        android:layout_alignWithParentIfMissing="false">

        <ImageView android:id="@+id/imgIcon"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:contentDescription="@string/contentdesc"
            android:gravity="center_vertical"
            android:layout_marginRight="16dp"
            android:layout_marginEnd="16dp"
            android:scaleType="fitXY"
            android:layout_marginLeft="5dp"
            android:layout_gravity="center"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="5dp"
            android:src="@mipmap/yuv_cerceve" />


        <ImageView android:id="@+id/imgIcon2"
            android:contentDescription="@string/contentdesc"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:gravity="center_vertical"
            android:layout_marginRight="16dp"
            android:layout_marginEnd="16dp"
            android:scaleType="fitXY"
            android:layout_marginLeft="5dp"
            android:layout_gravity="center"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="5dp"
            android:src="@mipmap/yuv_banlama" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:id="@+id/esasbolge"
            android:orientation="vertical"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/imgIcon"
            android:layout_toRightOf="@+id/imgIcon"
            >
            <TextView android:id="@+id/txtTitle"
                android:layout_width="175dp"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:textSize="15sp"
                android:textColor="#000000"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="5dp"
                android:typeface="normal"
                android:maxLength="@android:integer/config_shortAnimTime"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="Large Text"
                android:id="@+id/textView20" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="Large Text"
            android:id="@+id/textView25"
            android:layout_alignTop="@+id/imgIcon2"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginEnd="5dp"/>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView25"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView2"
                android:layout_below="@+id/textView25"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:src="@mipmap/circle"
                android:layout_gravity="center" />

        </FrameLayout>

    </RelativeLayout>

</RelativeLayout>